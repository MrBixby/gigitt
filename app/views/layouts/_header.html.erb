<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a href="/" class="pull-left"><img style="height: 50px; padding-top: 5px;" img src="/img/logoMonster.png"></a>
      <ul class="nav">
      </ul>
      <ul class="nav pull-right">
        <% if user_signed_in? %>
          <li><%= link_to "Home", gigs_path %></li>
          <li><%= link_to "Dashboard", current_user.profile %></li>
          <li><%= link_to current_user.profile, edit_path %></li>
          <li><%= link_to "Log Out", logout_path %></li>
          <li>
            <a href="/gigitt" id="gigittbutton" class="btn btn-success">#gigitt</a>
          </li>
        <% else %>
          <li><%= link_to "Register", register_path %></li>
          <li><%= link_to "Log In", login_path %></li>
        <% end %>

      </ul>
    </div>
  </div>
</div>
<div class="container">
  <% flash.each do |type, message| %>

  <% end %>
  <% if flash[:notice] %>
    <div class="alert alert-success">
      <button class="close" data-dismiss="alert">x</button>
      <%= flash[:notice] %>
    </div>
  <% end %>

  <% if flash[:alert] %>
    <div class="alert alert-error">
      <button class="close" data-dismiss="alert">x</button>
      <%= flash[:alert] %>
    </div>
  <% end %>

  <%= yield %>
  </div>
</header>
