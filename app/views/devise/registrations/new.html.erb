<br/>
<div class="row">
    <div class="col-sm-8 col-sm-offset-2">
        <legend>Sign up</legend>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            <%= f.label :role, "What brings you here?" %>
            <%= f.select :role, options_for_select( [["Fan", "fan"], ["Venue Owner", "venue"], ["Band Member", "band"]]), {}, { :class => 'form-control' } %>
            <%= f.label :profile, "Your Name"%>
            <%= f.text_field :profile, placeholder: "Billy Bob", class: 'form-control' %>
            <%= f.input :email %>
            <%= f.input :password %>
            <%= f.button :submit, "Sign up" %></br>
        <% end %>
    </div>
</div>