<br/>
<div class="row">
    <div class="col-sm-8 col-sm-offset-2">
        <legend>Sign up</legend>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            <%= f.label "Select Your Account Type" %>
            <%= f.select :role, options_for_select(resource.role_options), {}, { :class => 'form-control' } %>
            <%= f.label :username, "User Name"%>
            <%= f.text_field :username, placeholder: "User Name", class: 'form-control' %>
            <%= f.input :email, placeholder: "name@email.com", class: 'form-control'  %>
            <%= f.input :password, placeholder: "password", class: 'form-control'  %>
            <%= f.button :submit, "Sign up" %></br>
        <% end %>
    </div>
</div>
